@using EventHub.Core.ViewModels.Events

@model IEnumerable<EventListViewModel>;

<div class="list-events-page container">
    <p class="h2">All events</p>
    <hr />

    @if (Model.Count() == 0)
    {
        <div class="d-flex container align-content-center justify-content-center">

            <p class="text-danger-emphasis h4 m-auto">There is no events right now</p>

        </div>
    }
    else
    {
        <div class="row mt-3 mb-3">
            @foreach (var eventData in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 gy-3">
                    <div class="card h-100">
                        <img src="~/@eventData.ImagePath" class="img-fluid card-img-top" alt="EventImage" asp-append-version="true" />

                        <div class="card-body">
                            <h5 class="card-title">@eventData.Title</h5>

                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    Participants:
                                    @(eventData.ParticipantsCount) / @(eventData.MaxParticipants)

                                <li class="list-group-item d-flex justify-content-around">
                                    <span>City: @eventData.CityName</span>
                                    <span>Category: @eventData.Category</span>
                                </li>

                                <li class="list-group-item m-2">
                                    <span>
                                        Start: @eventData.StartDate.ToString("dd MMM yyyy")
                                    </span>        
                                    <br />
                                    <span>
                                        End: @eventData.EndDate.ToString("dd MMM yyyy")
                                    </span>
                                </li>
                                <div class="btn btn-primary m-2">Details</div>
                            </ul>
                          
                        </div>
                    </div>
                </div>
            }
        </div>

    }
</div>
